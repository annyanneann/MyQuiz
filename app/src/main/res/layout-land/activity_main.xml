<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/questionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal|center_vertical"
            tools:text = "@string/question1"
            />

        <TextView
            android:id="@+id/scoresText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="24dp"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="@string/scores" />

        <TextView
            android:id="@+id/winOrLossText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:padding="24dp"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="@string/win" />

        <ImageButton
            android:id="@+id/again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@null"
            android:contentDescription="@string/again"
            android:src="@mipmap/again"
            android:visibility="gone"
            app:srcCompat="@mipmap/again" />

        <LinearLayout
            android:id="@+id/LinLayHor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:visibility="visible"
            android:paddingBottom="15dp">

            <Button
                android:id="@+id/True"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:backgroundTint="#EA80FC"
                android:text="@string/buttonTrue" />

            <Button
                android:id="@+id/False"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FF80AB"
                android:text="@string/buttonFalse" />

        </LinearLayout>

        <Button
            android:id="@+id/cheatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF80AB"
            android:text="@string/showCheat"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>

    />

</FrameLayout>